---
layout: layout.njk
title: My KDP Books
---

<section class="row g-4">
  {% for book in collections.books %}
  <article class="col-12 col-sm-6 col-md-4">
    <div class="card h-100 shadow-sm book-card">
      <a href="{{ book.data.link }}" target="_blank" rel="noopener noreferrer">
        <img
          src="{{ book.data.cover }}"
          class="card-img-top"
          alt="{{ book.data.title }}" />
      </a>

      <div class="card-body d-flex flex-column">
        <h5 class="card-title mb-1">{{ book.data.title }}</h5>
        {% if book.data.subtitle %}
        <h6 class="card-subtitle mb-2 text-muted">{{ book.data.subtitle }}</h6>
        {% endif %} {% if book.data.description %}
        <p class="card-text small mb-3">{{ book.data.description }}</p>
        {% endif %}

        <div class="mt-auto">
          <a
            href="{{ book.data.link }}"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-flat-orange btn-sm w-100">
            View on Amazon
          </a>
        </div>
      </div>
    </div>
  </article>
  {% endfor %}
</section>
